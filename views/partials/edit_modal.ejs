<!-- Modal -->
<div
  class="modal fade"
  id="edit-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
<div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Obat</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/obat?_method=PUT" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Nama Obat</label>
            <input
              type="text"
              class="form-control namaObat"
              name="namaObat"
              nama="Masukkan Nama Obat"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Jenis Obat</label>
            <input
              type="text"
              class="form-control jenisObat"
              name="jenisObat"
              nama="Masukkan Jenis Obat"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Harga</label>
            <input
              type="number"
              class="form-control harga"
              name="harga"
              nama="Masukkan Harga"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Deskripsi Obat</label>
            <textarea
              type = "text"
              class="form-control deskripsiObat"
              name="deskripsiObat"
              nama="Masukkan Deskripsi Obat"
              rows="3"
              required
            ></textarea>
          </div>
          <div class="form-group">
            <label for="name">Efek Samping</label>
            <textarea
              type = "text"
              class="form-control efekSamping"
              name="efekSamping"
              nama="Masukkan Efek Samping"
              rows="3"
              required
            ></textarea>
          </div>
          <div class="form-group">
            <label for="name">Dosis</label>
            <input
              type="number"
              class="form-control dosis"
              name="dosis"
              nama="Masukkan Dosis dalam Sehari"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Kontraindikasi</label>
            <textarea
              type="text"
              class="form-control kontraindikasi"
              name="kontraindikasi"
              nama="Masukkan kontraindikasi";
              rows="3"
              required
            ></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" class="id" name="id" />
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>